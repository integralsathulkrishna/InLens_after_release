<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/Card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="end|top"
        android:layout_margin="10dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="9dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_changer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cardview_light_background" />

        <TextView
            android:id="@+id/setting_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="80dp"
            android:indeterminate="true"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="230dp"
        android:background="@android:color/white"
        app:cardBackgroundColor="@android:color/white">

        <TextView
            android:id="@+id/settings_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/photographer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_display_name"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/settings_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photographer_name"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/SendInviteBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/CancelInviteBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/DoneButtonUserSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="DONE"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:textColor="#3E3D63"
        android:textSize="20sp" />
</android.support.design.widget.CoordinatorLayout>