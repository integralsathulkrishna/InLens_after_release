<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/issue_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="#0"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/issue_title"
        android:layout_toEndOf="@id/issue_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Dummy Title"
        android:textSize="20sp"
        android:layout_alignTop="@id/issue_count"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/issue_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Dummy Title"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/issue_title"
        android:layout_alignStart="@id/issue_title"/>

    <TextView
        android:id="@+id/issue_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="By:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/issue_desc"
        android:layout_alignStart="@id/issue_desc"/>

    <ImageButton
        android:id="@+id/issue_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/issue_title"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:backgroundTint="@android:color/holo_green_light"/>

</RelativeLayout>