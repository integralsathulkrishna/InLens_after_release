<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/details_dialog_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/black"
            android:src="@drawable/ic_closedialog" />

        <TextView
            android:id="@+id/details_dialog_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/details_dialog_close_btn"
            android:layout_centerHorizontal="true"
            android:text="Album Details"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/container_for_details_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/details_dialog_header"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/details_dialog_albumtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Album Title :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Album Description :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Album Type :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumowner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Album Creator :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Album Start Time :"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Album End Time :"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumpostcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Album Post Count :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_dialog_albumparticipantscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Album Participant Count :"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>