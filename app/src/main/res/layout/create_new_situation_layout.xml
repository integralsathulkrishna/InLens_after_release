<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#FFFF">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="New Situation"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Enter the name for the new situation. Default name is given below"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/situation_name"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/message"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="New situation name ?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/situation_name"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:text="Done"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/situation_name"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:padding="2dp"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>