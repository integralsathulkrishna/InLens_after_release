<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorPrimary"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_dashboard_black_24dp">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/parent"
        android:background="#FFFF">

        <TextView
            android:id="@+id/situationtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLength="20"
            android:text="SituationName"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/createdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/situationtitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:maxLength="20"
            android:text="By : "
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/createdtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdby"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text=" @ : "
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/numberofpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdtime"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:maxLength="20"
            android:text="Number of post :"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/situaview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/curved_corners"
        android:backgroundTint="@color/colorPrimary"
        android:text="View"
        android:textColor="#ffffff"
        android:visibility="gone" />

    <Button
        android:id="@+id/situajoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:text="Join"
        android:textColor="#FFFF"
        android:visibility="gone" />

</RelativeLayout>