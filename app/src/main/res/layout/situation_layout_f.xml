<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_height="140dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"

    android:layout_marginBottom="5dp"
    android:background="@color/colorPrimary"
    android:elevation="40dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2.5dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/SituationLogo"
            android:layout_width="62dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif"
            android:text="L"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/situationtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SituationLogo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:text="SituationName"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/createdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/situationtitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:maxLength="20"
            android:text="By : "
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/createdtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdby"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text=" @ : "
            android:textColor="@android:color/black"
            android:textSize="11sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>